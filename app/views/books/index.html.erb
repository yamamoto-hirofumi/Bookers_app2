<p id="notice"></p>

<h1 class=i"ndex-heding">Books</h1>

<table>
  <thead>
    <tr>
      <th class="index">Title</th>
      <th class="index">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="bun"><%= link_to "Show", book_path(book) %></td>
      <td class="bun"><%= link_to "Edit", edit_book_path(book) %></td>
      <td class="bun"><%= link_to "Destroy", book_path(book), method: :delete,"data-confirm" => "Are you sure?" %></td>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  </ul>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>